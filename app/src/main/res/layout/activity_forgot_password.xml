<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ForgotPassword">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="50dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:textSize="20sp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="30dp"
            android:textColor="@color/grey"
            android:textStyle="bold"
            android:text="Forgot Your Password?" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please provide your email/phone number below to search for your account"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:layout_below="@id/tv1"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your email account or number"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_below="@id/tv2"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="325dp"
            android:layout_height="50dp"
            android:fontFamily="sans-serif-medium"
            android:imeOptions="actionNext"
            android:layout_below="@id/tv3"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:hint="Email or number "
            android:textColorHint="#8C8A8A"
            android:paddingStart="15dp"
            android:textColor="#FF000000"
            android:background="@color/white2"
            android:inputType="textPassword"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_below="@id/password"
            android:layout_marginStart="180dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/password_btn"
            android:text="CANCEL"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_below="@id/password"
            android:layout_marginStart="275dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/password_btn"
            android:text="ENTER"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:backgroundTint="@null" />

        <TextView
            android:id="@+id/or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:textSize="22sp"
            android:layout_below="@id/btn2"
            android:layout_centerHorizontal="true"
            android:textFontWeight="400"
            android:layout_marginTop="70dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="OR" />

        <TextView
            android:id="@+id/instantly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/or"
            android:text="Instantly login or sign up via"
            android:textSize="12sp"
            android:layout_marginStart="30dp"
            android:textColor="#8C8A8A"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/gmail"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/instantly"
            android:layout_marginTop="10dp"
            android:background="@drawable/email_btn"
            android:text="CONTINUE WITH GOOGLE"
            android:drawableStart="@drawable/baseline_attach_email_24"
            android:drawablePadding="10dp"
            android:textAlignment="center"
            android:layout_marginLeft="60dp"
            app:backgroundTint="@null"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/fb"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/gmail"
            android:layout_marginTop="10dp"
            android:background="@drawable/facebook_btn"
            android:text="CONTINUE WITH FACEBOOK"
            android:drawableStart="@drawable/baseline_attach_email_24"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:drawablePadding="10dp"
            android:layout_marginLeft="60dp"
            app:backgroundTint="@null"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/fb"
            android:layout_marginTop="80dp"
            android:layout_marginStart="30dp"
            android:textColor="@color/grey"
            android:text="Privacy Policy" />

        <TextView
            android:id="@+id/tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv4"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:textColor="@color/grey"
            android:text="Terms and Conditions" />

</RelativeLayout>
</ScrollView>